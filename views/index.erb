Welcome to Fizz Buzz!

<!-- take the array from the fizzbuzzarray.rb and pass that to your app.rb, then pass it through the locals to your erb
and display it on the erb
 -->

<% x = 0 %>
<% fizz_array = [] %>
	<% 100.times do %> 		
	<% x = x + 1 %>
 		<% if x % 15 == 0 %>
			<% fizz_array.push("fizz buzz") %>
			<p> <%= "fizz buzz" %> <p>
 		<% elsif x % 5 == 0 %> 		
 		<%	fizz_array.push("fizz") %>
 			<p> <%= "fizz" %> <p>
 		<% elsif x % 3 == 0 %>
 		<%	fizz_array.push("buzz") %>
 			<p> <%= "buzz" %> <p>
 		<% else %>
 			<% fizz_array.push(x) %>
 			<p> <%= x %> <p>
 		<% end %>	
 	<% end %>